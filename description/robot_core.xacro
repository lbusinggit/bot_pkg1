<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <xacro:include filename="inertial_macros.xacro"/>
    
    <!-- Colours for use in URDF declared below:-->
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1" />
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1" />
    </material>

    <material name="blue">
        <color rgba="0 0 1 1" />
    </material>

    <material name="green">
        <color rgba="0 1 0 1" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.65 0 1" />
    </material>

    <!-- Links and Joints: -->
    <!-- URDF uses meters as units.-->

    <!-- Base Link: -->   
    <link name="base_link">
        <origin xyz="0 0 0.035"/>
    </link>

    <!-- Chassis Link: -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="-0.125 0 0.025"/>
    </joint>

    <link name="chassis_link">
        <visual>
            <origin xyz="0.125 0 -0.025"/>
            <geometry>
                <box size= "0.30 0.20 0.05"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <origin xyz="0.125 0 -0.025"/>
            <geometry>
                <box size= "0.30 0.20 0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.30" y="0.20" z="0.05">
            <origin xyz="0.125 0 -0.025" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- Wheel Links: -->
    <!-- Left Wheel Links: -->

    <!-- REAR -->
    <joint name="left_wheel_rear_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_rear_link"/>
        <origin xyz="-0.125 0.10 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel_rear_link">
        <visual>
            <origin xyz="0 0 0.01425"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="grey"/>
        </visual>

        <collision>
            <origin xyz="0 0 0.01425"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" radius="0.05" length="0.04">
            <origin xyz="0 0 0.01425" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_wheel_rear_link">
        <material>Gazebo/Grey</material>
    </gazebo>
    <!-- FWD -->
    <joint name="left_wheel_fwd_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_fwd_link"/>
        <origin xyz="0.125 0.10 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel_fwd_link">
        <visual>
            <origin xyz="0 0 0.01425"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="grey"/>
        </visual>

        <collision>
            <origin xyz="0 0 0.01425"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" radius="0.05" length="0.04">
            <origin xyz="0 0 0.01425" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_wheel_fwd_link">
        <material>Gazebo/Grey</material>
    </gazebo>
    <!-- Right Wheel Links: -->

    <!-- REAR -->
    <joint name="right_wheel_rear_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_rear_link"/>
        <origin xyz="-0.125 -0.10 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel_rear_link">
        <visual>
            <origin xyz="0 0 0.01425"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="grey"/>
        </visual>

        <collision>
            <origin xyz="0 0 0.01425"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" radius="0.05" length="0.04">
            <origin xyz="0 0 0.01425" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel_rear_link">
        <material>Gazebo/Grey</material>
    </gazebo>

    <!-- FWD -->
    <joint name="right_wheel_fwd_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_fwd_link"/>
        <origin xyz="0.125 -0.10 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel_fwd_link">
        <visual>
            <origin xyz="0 0 0.01425"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="grey"/>
        </visual>

        <collision>
            <origin xyz="0 0 0.01425"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" radius="0.05" length="0.04">
            <origin xyz="0 0 0.01425" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel_fwd_link">
        <material>Gazebo/Grey</material>
    </gazebo>
</robot>
